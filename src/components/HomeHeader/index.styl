@import '../../resource/common/stylus/varibles.styl'
.header-wrap
        display: flex
        height:$headerHeight
        line-height:$headerHeight
        background: $bgColor
        color: #fff
        .header-left
            width: .64rem
            text-align: center
            float: left
            i
                font-size: .3rem
        .header-input
            flex: 1
            height: .64rem
            line-height: .64rem
            margin-top: .12rem
            margin-left: .1rem
            padding-left: .2rem
            background: #fff
            border-radius: .1rem
            color: #ccc
            input 
                width: 88%
                margin: 0 0 .08rem .1rem
        .header-right
            min-width: 1.04rem
            padding: 0 .1rem
            float: right
            text-align: center
            color: #fff
            font-size: .3rem 
            i
                margin-left: .04rem
                font-size: .14rem 
                vertical-align:top


    